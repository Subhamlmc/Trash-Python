#!/usr/bin/python3
import re
import string

def get_input():
    return input(" Enter your password and we'll rate its strength: ")

def password_strength(pwd):
    print(f"\nğŸ“ You entered: {pwd}")
    escaped_punct = re.escape(string.punctuation)

    # Length check
    if len(pwd) < 8:
        print(" Too short! Password must be at least 8 characters.")
        return

    # Check character categories
    has_lower = bool(re.search(r"[a-z]", pwd))
    has_upper = bool(re.search(r"[A-Z]", pwd))
    has_digit = bool(re.search(r"\d", pwd))
    has_punct = bool(re.search(fr"[{escaped_punct}]", pwd))

    score = sum([has_lower, has_upper, has_digit, has_punct])

    # Strength rating
    if score == 4:
        print(" Strong password  â€” Youâ€™re good to go!")
    elif score == 3:
        print(" Decent password â€” consider adding a missing character type.")
    elif score == 2:
        print(" Weak password â€” try mixing uppercase, lowercase, digits & symbols.")
    else:
        print(" Very weak â€” avoid using common letters/numbers only.")

    # Feedback about whatâ€™s missing
    print("\nğŸ§ª Breakdown:")
    print(f" - Lowercase letters: { if has_lower else }")
    print(f" - Uppercase letters: { if has_upper else }")
    print(f" - Digits: { if has_digit else }")
    print(f" - Symbols: { if has_punct else }")

password = get_input()
password_strength(password)
